<%- include('../includes/header.ejs') %>
</head>
<body style="font-family:sans-serif;" class="d-flex flex-column min-vh-100">
    <%- include('../includes/navigation.ejs') %>
    <section class="vh-100 gradient-custom">
        <div class="container mt-5 "></div>
        <div class="container py-5 h-70">
            <div class="container mt-5 "></div>
            <div class="row justify-content-center align-items-center h-100">
              <div class="col-12 col-lg-9 col-xl-7">
                <% if (errorMsg.length > 0) { %>
                    <div class="alert alert-danger" role="alert">
                      <i class="bi bi-exclamation-triangle-fill me-2"></i><%= errorMsg %>
                    </div>
                  <% } %>
                <div class="card shadow-2-strong card-registration border-0 shadow" style="border-radius: 15px;">
                  <div class="card-body p-4 p-md-5">
                    <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-center">Password Reset</h3>
                    <p class="mb-4 pb-2 pb-md-0 mb-md-5 text-center">Enter the email address that you used to register. We'll send you an email with a link to reset your password. </p>
                    <form action="/forgot-password" method="post" class="mx-1 mx-md-4" >
                      <div class="d-flex flex-row align-items-center mb-4">
                        
                        <div class="form-outline flex-fill mb-0">
                          <label class="form-label" for="form3Example3c" name="email">Email</label>
                          <input required type="email" id="form3Example3c" class="form-control" placeholder="Email" name="email"/>
                        </div>
                      </div>
                      <div class="d-flex justify-content-center mx-4 mb-3 mt-2 mb-lg-4">
                        <button type="submit" class="btn btn-primary btn-lg">Send</button>
                      </div>
                    </form>
                </div>
              </div>
            </div>
          </div>
        </div>
    </section>    

<%- include('../includes/footer.ejs') %>