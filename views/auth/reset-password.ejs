<%- include('../includes/header.ejs') %>
</head>
<body style="font-family:sans-serif;" class="d-flex flex-column min-vh-100">
    <%- include('../includes/navigation.ejs') %>
    <section class="vh-100 gradient-custom">
        <div class="container mt-5 "></div>
  
        <div class="container py-5 h-70">
          <div class="container mt-5 "></div>
          <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
              <div class="card shadow-2-strong card-registration border-0 shadow" style="border-radius: 15px;">
                <div class="card-body p-4 p-md-5">
                  <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-center">Reset Password</h3>
                  <form action="/reset-password" method="post" class="mx-1 mx-md-4" >
                      <input type="hidden" name="userId" value="<%= user._id %>">
                    <div class="d-flex flex-row align-items-center mb-4">
                        <div class="form-outline flex-fill mb-0">
                          <label class="form-label" for="form3Example4c" name="password">Password</label>
                          <input required type="password" id="password" class="form-control" placeholder="Password" name="password"/>
                        </div>
                      </div>
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example4c" name="password">Confirm Password</label>
                        <input required type="password" id="confirm_password" class="form-control" placeholder="Password" name="confirmPassword"/>
                      </div>
                    </div>
  
  
                    <div class="d-flex justify-content-center mx-4 mb-3 mt-2 mb-lg-4">
                      <button type="submit" class="btn btn-primary btn-lg">Save</button>
                    </div>
  
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <script>
        var password = document.getElementById("password")
          , confirm_password = document.getElementById("confirm_password");

        function validatePassword() {
          if (password.value != confirm_password.value) {
            confirm_password.setCustomValidity("Passwords Don't Match");
          } else {
            confirm_password.setCustomValidity('');
          }
        }

        password.onchange = validatePassword;
        confirm_password.onkeyup = validatePassword;
      </script>
