<%- include('../includes/header.ejs') %>

  </head>

  <body style="font-family:sans-serif;" class="d-flex flex-column min-vh-100">
    <%- include('../includes/navigation.ejs') %>

      <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
          <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
              <div class="card shadow-2-strong card-registration border-0 shadow" style="border-radius: 15px;">
                <div class="card-body p-4 p-md-5">
                  <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-center">Sign Up</h3>
                  <form action="/signup" method="post" class="mx-1 mx-md-4">
                    <% if (errorMsg.length> 0) { %>
                      <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <%= errorMsg %>
                      </div>
                      <% } %>
                        <div class="d-flex flex-row align-items-center mb-4">


                          <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="form3Example1c">Name</label>
                            <input required type="text" id="form3Example1c" name="name" class="form-control"
                              placeholder="Name" />
                          </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">

                          <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="form3Example1c" name="username">Username</label>
                            <input required type="text" id="form3Example1c" class="form-control" placeholder="Username"
                              name="username" />
                          </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">

                          <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="form3Example3c" name="email">Email</label>
                            <input required type="email" id="form3Example3c" class="form-control" placeholder="Email"
                              name="email" />
                          </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">

                          <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="form3Example4c" name="password">Password</label>
                            <input required type="password" id="password" class="form-control"
                              placeholder="Password" name="password" />
                          </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">

                          <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="form3Example4cd" name="confirmPassword">Confirm
                              Password</label>
                            <input required type="password" id="confirm_password" class="form-control"
                              placeholder="Confirm Password" name="confirmPassword" />
                          </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">

                          <h6 class="mb-0 me-4">Gender: </h6>

                          <div class="form-check form-check-inline mb-0 me-4">
                            <input class="form-check-input" type="radio" name="gender" id="femaleGender"
                              value="female" />
                            <label required class="form-check-label" for="femaleGender" name="gender">Female</label>
                          </div>

                          <div class="form-check form-check-inline mb-0 me-4">
                            <input class="form-check-input" type="radio" name="gender" id="maleGender" value="male" />
                            <label required class="form-check-label" for="maleGender" name="gender">Male</label>
                          </div>

                        </div>

                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                          <button type="submit" class="btn btn-primary btn-lg">Sign Up</button>
                        </div>

                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <script>
        var password = document.getElementById("password")
          , confirm_password = document.getElementById("confirm_password");

        function validatePassword() {
          if (password.value != confirm_password.value) {
            confirm_password.setCustomValidity("Passwords Don't Match");
          } else {
            confirm_password.setCustomValidity('');
          }
        }

        password.onchange = validatePassword;
        confirm_password.onkeyup = validatePassword;
      </script>
      <%- include('../includes/footer.ejs') %>