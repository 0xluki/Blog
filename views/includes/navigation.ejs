<header>
    <nav class="navbar navbar-expand-md navbar-light bg-white absolute-top">
        <div class="container">

            <button class="navbar-toggler order-2 order-md-1" type="button" data-bs-toggle="collapse"
                data-bs-target=".navbar-collapse" aria-controls="navbar-left navbar-right" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse order-3 order-md-2" id="navbar-left">

                <ul class="navbar-nav me-auto">

                    <li class="nav-item dropdown">
                        <% if(!isAuthed) { %>
                            <a class="nav-link" href="/signup">Sign Up</a>
                            <% } %>
                    </li>
                    <li class="nav-item dropdown active">
                        <% if(!isAuthed) { %>
                            <a class="nav-link" href="/signin">Sign In</a>
                            <% } %>
                    </li>

                </ul>
            </div>

            <a class="navbar-brand mx-auto order-1 order-md-3" href="/">Blog</a>

            <div class="collapse navbar-collapse order-4 order-md-4" id="navbar-right">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About</a>
                    </li>
                    <% if (isAuthed) { %>
                        <% if (!user.admin) { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/contact-us">Contact</a>
                            </li>
                            <% } %>
                        <li class="nav-item dropdown">
                            <div class="dropdown ms-1 ms-lg-0">
                                <a class="avatar avatar-sm p-0" href="#" id="profileDropdown" role="button"
                                    data-bs-auto-close="outside" data-bs-display="static" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    <img class="avatar-img rounded-circle" src="<%= user.avatar %>" width="48"
                                        height="48">

                                </a>
                                <ul style="font-family:sans-serif"
                                    class="dropdown-menu dropdown-animation dropdown-menu-end shadow pt-3"
                                    aria-labelledby="profileDropdown">
                                    <li class="px-3">
                                        <div class="d-flex align-items-center">

                                            <div class="avatar me-3">
                                                <img class="avatar-img rounded-circle shadow" src="<%= user.avatar %>"
                                                    alt="avatar" width="48" height="48">

                                            </div>
                                            <div>
                                                <a class="link-dark h6 text-decoration-none fw-bold" href="/profile">
                                                    <%= user.name%>
                                                </a>
                                                <small class="text-muted m-0">
                                                    <%= user.email%>
                                                </small>
                                            </div>
                                        </div>
                                        <hr>
                                    </li>
                                    <!-- Links -->
                                    <li><a class="dropdown-item" href="/profile/edit"><i
                                                class="bi bi-person fa-fw me-2"></i>Edit
                                            Profile</a></li>
                                    <% if (user.admin) { %>
                                        <li><a class="dropdown-item" href="/admin/">
                                                <i class="bi bi-sliders me-2"></i></i>Dashboard</a></li>
                                        <% } %>
                                            <li>
                                            <li><a class="dropdown-item" href="/posts/new"><i
                                                        class="bi bi-file-earmark-plus fa-fw me-2"></i>Add
                                                    Post</a></li>
                                            <li>
                                                <hr class="dropdown-divider">
                                            </li>
                                            <!-- signout START -->
                                            <li>
                                            <li><a class="dropdown-item bg-danger-soft-hover" href="/logout"><i
                                                        class="bi bi-power fa-fw me-2"></i>Sign Out</a></li>
                        </li>
                        <% } %>
                </ul>
            </div>
        </div>
    </nav>
</header>